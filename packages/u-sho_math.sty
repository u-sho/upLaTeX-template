%% Dirac's Braket
\RequirePackage{braket}     % \Braket & \Bra & \Ket & \Set



%% ケットブラベクトル
\newcommand{\ketbra}[2]{\ket{#1}\mspace{-4mu}\bra{#2}}  % ⎢a⟩⟨b⎥ インライン
\newcommand{\Ketbra}[2]{\Ket{#1}\mspace{-6mu}\Bra{#2}}  % ⎢a⟩⟨b⎥ ディスプレイ
  \newcommand{\pure}[1]{\ketbra{#1}{#1}}  % 純粋状態（インライン環境）
  \newcommand{\Pure}[1]{\Ketbra{#1}{#1}}  % 純粋状態（ディスプレイ環境）

%% 括弧
%%   \cmd*      -> \left \right
%%   \cmd[\big] -> \bigl \bigr
\DeclarePairedDelimiter\lrp{(}{)}   % 丸括弧 (): \lrp* \lrp[<size_cmd>]
\DeclarePairedDelimiter\lrb{\{}{\}} % 波括弧 {}: \lrb* \lrb[<size_cmd>]
\DeclarePairedDelimiter\lrs{[}{]}   % 角括弧 []: \lrs* \lrs[<size_cmd>]

%% 距離
\DeclarePairedDelimiter\abs{\lvert}{\rvert}   % 絶対値: ⎢a⎥
\DeclarePairedDelimiter\norm{\lVert}{\rVert}  % ノルム: ⎢⎢a⎥⎥

%% 内積
\DeclarePairedDelimiterX{\inp}[2]{\langle}{\rangle}{{#1},{#2}}  % 内積: ⟨a,b⟩

