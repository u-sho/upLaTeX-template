%% 論理記号（引数をとって左肩につける＆元の記号（縦長）より正方形より）
\makeatletter
  \newcommand{\usho@leftup}[2]{{{}^{#1}{#2}}}             % インライン環境
    \newcommand{\exist}[1]{\usho@leftup{∃}{#1}}          %   ∃ \exist
    \newcommand{\all}[1]{\usho@leftup{∀}{#1}}            %   ∀ \all
  \newcommand{\usho@Leftup}[2]{\vphantom{#2}^{#1}\!{#2}}  % ディスプレイ環境
    \newcommand{\Exist}[1]{\usho@Leftup{∃}{#1}}          %   ∃ \Exist
    \newcommand{\All}[1]{\usho@Leftup{∀}{#1}}            %   ∀ \All
\makeatother


