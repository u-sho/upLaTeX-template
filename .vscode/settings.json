{
  /* editor */
  //"editor.folding": true,
  //"editor.foldingStrategy": "auto",
  //"editor.fontFamily": "HackGen",
  "editor.matchBrackets": "always",
  "editor.tabSize": 2,
  "files.associations": {
    "*.sty": "latex",
    "*.cls": "latex",
    "*.tex": "latex"
  },
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  /* intellisense */
  "latex-workshop.intellisense.command.user": {
    "label{}": "lavel{${1|eq,tb,fg,ch,sec,sub|}:$2}$0",
    "ref{}": "lavel{${1|eq,tb,fg,ch,sec,sub|}:$2}$0"
  },
  "latex-workshop.intellisense.package.dirs": ["./packages"],
  "latex-workshop.intellisense.package.enabled": true,


  /* upLaTeX build */
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.acn", "*.acr", "*.alg", "*.aux",
    "*.bbl", "*.blg", "*.dvi", "*.fdb_latexmk",
    "*.fls", "*.glg", "*.glo", "*.gls",
    "*.idx", "*.ind", "*.lof", "*.log",
    "*.lot", "*.nav", "*.out", "*.toc",
    "*.snm", "*.synctex", "*.synctex(busy)", //"*.synctex.gz",
    "*.synctex.gz(busy)", "*.vrb"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk üîÉ",
      "tools": [
        "latexmk"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-e", // upLaTeX(utf8) + synctex „Çí‰Ωø„ÅÜÔºé
        "$latex=q/uplatex -kanji=utf8 -no-guess-input-enc -synctex=1 %O %S/",
        "-e", // upBibTeX „Çí‰Ωø„ÅÜ
        "$bibtex=q/upbibtex %O %B/",
        "-e", // biber „Çí utf8 „Åß‰Ωø„ÅÜ
        "$biber=q/biber --bblencoding=utf8 -u -U --output_safechars %O %B/",
        "-e", // upmendex „Çí‰Ωø„ÅÜ
        "$makeindex=q/upmendex %O -o %D %S/",
        "-e", // dvipdfmx „Çí‰Ωø„ÅÜ
        "$dvipdf=q/dvipdfmx %O -o %D %S/",
        "-outdir=%OUTDIR%", // latex.outDir „Å´Âá∫Âäõ
        "-interaction=nonstopmode",
        "-file-line-error", // „Ç®„É©„Éº„ÅÆË°åÊï∞„ÇíË°®Á§∫
        "-halt-on-error", // „Ç®„É©„Éº„ÅåÂá∫„Åü„Çâ„Åô„Åê„Å®„ÇÅ„ÇãÔºélistingsÁ≥ª„ÅØ„Éê„Ç∞„Çã„Åã„ÇÇ
        "-norc", // .lattexmkrc „Çí‰Ωø„Çè„Å™„ÅÑ
        "-gg", // PDF‰ª•Â§ñ„ÅÆ„Éï„Ç°„Ç§„É´„ÇíÂá∫Âäõ„Åó„Å™„ÅÑ
        "-pdfdvi", // pdftex „Åß„ÅØ„Å™„Åè latex + dvipdf „Åß„Ç≥„É≥„Éë„Ç§„É´„Åô„Çã
        "%DOC%"
      ],
      "env": {
        // ./packages Áõ¥‰∏ã„ÅÆ„Éë„ÉÉ„Ç±„Éº„Ç∏„ÇíÊ§úÁ¥¢„Åô„Çã
        "TEXINPUTS": "%WORKSPACE_FOLDER%/packages:"
      }
    }
  ],
  "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/docs",

  /* view */
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.invertMode.enabled": "auto",
  "latex-workshop.view.pdf.invert": 0.8,
  "latex-workshop.view.pdf.invertMode.grayscale": 0,
  "latex-workshop.view.pdf.color.light.backgroundColor": "#f8f8f8",
  "workbench.editor.closeOnFileDelete": false,

  /* chktex */
  "latex-workshop.linting.delay": 100,
  "latex-workshop.linting.run": "onType",
  "latex-workshop.linting.chktex.enabled": true,
  "latex-workshop.linting.chktex.exec.args": [
    "-wall",
    // "-n19", // use ' instead of ‚Äô
    "-n21", // avoid \. or \), as . or )
    "-n22", // comment display
    "-n30", // multiple spaces detected in output
    "-n40", // user regex
    "-n44", // \toprule, and so on
    "-e16", // does math mode end?
    "-q"
  ],

  /* latexindent: unable */
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false
  }
}
