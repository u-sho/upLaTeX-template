{
  /* editor */
  //"editor.folding": true,
  //"editor.foldingStrategy": "auto",
  //"editor.fontFamily": "HackGen",
  "editor.matchBrackets": "always",
  "editor.tabSize": 2,
  "files.associations": {
    "*.sty": "latex",
    "*.cls": "latex",
    "*.tex": "latex"
  },
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": true,

  "bracketPairColorizer.colorMode": "Independent",

  /* upLaTeX build */
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.acn", "*.acr", "*.alg", "*.aux",
    "*.bbl", "*.blg", "*.dvi", "*.fdb_latexmk",
    "*.fls", "*.glg", "*.glo", "*.gls",
    "*.idx", "*.ind", "*.lof", "*.log",
    "*.lot", "*.nav", "*.out", "*.toc",
    "*.snm", "*.synctex", "*.synctex(busy)", "*.synctex.gz",
    "*.synctex.gz(busy)", "*.vrb"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk üîÉ",
      "tools": [
        "latexmk"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-e", // upLaTeX(utf8) + synctex „Çí‰Ωø„ÅÜÔºé
        "$latex=q/uplatex -kanji=utf8 -no-guess-input-enc -synctex=1 -interaction=nonstopmode -file-line-error %S/",
        "-e", // upBibTeX „Çí‰Ωø„ÅÜ
        "$bibtex=q/upbibtex %B/",
        "-e", // biber „Çí utf8 „Åß‰Ωø„ÅÜ
        "$biber=q/biber --bblencoding=utf8 -u -U --output_safechars %B/",
        "-e", // upmendex „Çí‰Ωø„ÅÜ
        "$makeindex=q/upmendex -o %D %S/",
        "-e", // dvipdfmx „Çí‰Ωø„ÅÜ
        "$dvipdf=q/dvipdfmx -o %D %S/",
        "-e", // ./packages Áõ¥‰∏ã„ÅÆ„Éë„ÉÉ„Ç±„Éº„Ç∏„ÇíÊ§úÁ¥¢„Åô„Çã
        "$ENV{'TEXINPUTS'}='./packages:' . $ENV{'TEXINPUTS'}",
        "-norc", // .lattexmkrc „Çí‰Ωø„Çè„Å™„ÅÑ
        "-gg", // PDF‰ª•Â§ñ„ÅÆ„Éï„Ç°„Ç§„É´„ÇíÂá∫Âäõ„Åó„Å™„ÅÑ
        "-pdfdvi", // pdftex „Åß„ÅØ„Å™„Åè latex + dvipdf „Åß„Ç≥„É≥„Éë„Ç§„É´„Åô„Çã
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",

  /* chktex */
  "latex-workshop.chktex.args.active": [
    "-wall",
    // "-n19", // use ' instead of ‚Äô
    "-n21", // avoid \. or \), as . or )
    "-n22", // comment display
    "-n30", // multiple spaces detected in output
    "-n40", // user regex
    "-e16", // does math mode end?
    "-q"
  ],
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.chktex.delay": 100,
  "latex-workshop.chktex.run": "onType",

  /* latexindent */
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false
  }
}
